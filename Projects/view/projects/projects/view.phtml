                    },
                    _initSlider = function () {
                        _.$slider.slick({
                            accessibility: false,
                            dots: false,
                            infinite: true,
                            speed: _.animatingSpeed,
                            slidesToShow: _.slidesToShow,
                            touchThreshold: browser.mobile ? 5 : 50,
                            centerMode: true,
                            centerPadding: "0px",
                            variableWidth: true,
